<header class="fixed z-50 h-28 w-screen bg-gradient-to-b from-[#f63f2d] to-[#fe6333] text-black">
    <div class="m-auto flex h-full max-w-screen-xl flex-col py-2 px-1">
        <nav id="top-nav" class="flex justify-between text-sm">

            <div id="top-left">
                <ul class="flex gap-2">
                </ul>
            </div>
            <div id="top-right">
                <ul class="flex gap-5">
                    <li>
                        <a href="#" class="hover:text-[#fbc797]"> <i class="fa-regular fa-bell"></i> Thông báo </a>
                    </li>
                    <li>
                        <a href="#" class="hover:text-[#fbc797]"> <i class="fa-regular fa-circle-question"></i> Hỏi đáp </a>
                    </li>
                    <li>
                        <div class="dropdown-hover group dropdown">
                            <label tabindex="0" class="cursor-pointer py-2 group-hover:text-[#fbc797]">
                                <i class="fa-solid fa-globe"></i> Tiếng Việt
                                <i class="fa-solid fa-chevron-down transition-transform group-hover:-rotate-180"></i>
                            </label>
                            <ul tabindex="0"
                                class="dropdown-content menu rounded-box mt-2 w-36 border border-black bg-white text-black shadow">
                                <li><a>Tiếng Việt</a></li>
                                <li><a>Tiếng Anh</a></li>
                            </ul>
                        </div>
                    </li>
                    <li><a href="/LoginUser/RegisterUser"><span class="glyphicon glyphicon-user"></span>Sign Up</a></li>
                    <li><a href="/LoginUser/Index"><span class="glyphicon glyphicon-log-in"></span>Log In</a></li>
                    <li><a href="@Url.Action("LogOutUser","LoginUser")">LogOut</a></li>

                </ul>
            </div>
        </nav>
        <nav id="bottom-nav" class="flex h-full gap-5">
            <a href="/" class="imagesmall flex h-full items-center justify-center text-4xl"><img src="https://cdn.discordapp.com/attachments/933365657691619338/1039581671747502110/76747557_100592164752975_2375780023278764032_n.jpg" alt="World Of Phone"></a>
            <div id="right" class="flex h-full w-full items-center justify-between">
                <div class="w-11/12 rounded-md border-2 border-transparent p-1 focus-within:border-black">
                    <div class="flex w-full gap-2 rounded-sm bg-white p-1 ">
                        <input type="text" class="w-full text-black focus:outline-none border-black" placeholder="Bạn tìm gì..." />
                        <button class="rounded-sm bg-[#f00000] py-1 px-5">
                            <i class="fa-solid fa-magnifying-glass"></i>
                        </button>
                    </div>
                </div>

                <ul>
                    <li>
                        <a href="/ShoppingCart/ShowCart"><img src="@Url.Content("~/Content/images/cart2.png")" style="height:30px;width:30px;margin-top:10px;" /></a>
                        @Html.Action("BagCart","ShoppingCart")
                    </li>
                </ul>
            </div>
        </nav>
    </div>
</header>