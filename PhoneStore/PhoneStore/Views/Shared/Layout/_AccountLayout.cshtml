<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Thế giới di động - @ViewBag.Title</title>

    <script src="https://kit.fontawesome.com/34bc6c9717.js" crossorigin="anonymous"></script>
    @Styles.Render("~/Content/css/base.css")
</head>
<body class="flex min-h-screen w-screen flex-col overflow-x-hidden">
    <header class="h-20 flex-[0_1_auto] bg-white">
        <nav class="m-auto flex h-full max-w-screen-xl items-center justify-between py-2 px-1 text-[#030303]">
            <div class="flex h-full items-center gap-5">
                <a class="text-3xl font-medium" href="/">World Of Phone</a>

            </div>
            <div>
                <a href="/">Bạn cần giúp đỡ?</a>
            </div>
        </nav>
    </header>

    <main class="flex-[1_1_auto] bg-[#919180]">
        <section class="m-auto flex h-[600px] max-w-screen-lg items-center justify-end"
                 style=" background-image: url('https://cdn.discordapp.com/attachments/933365657691619338/1039926150794854420/76747557_100592164752975_2375780023278764032_n.jpg'); background-size: 500px; background-repeat: no-repeat; background-position: center left; ">
            <form class="flex w-[25rem] flex-col gap-5 rounded-md bg-white p-5 text-lg font-medium text-black">
                <label>@ViewBag.Title</label>

                @RenderBody()
            </form>
        </section>
    </main>

    @Html.Partial("Components/Footer")

    @RenderSection("script", false)
</body>
</html>